<!DOCTYPE html>
<html>
<head>
  <meta charset=utf-8>
  <title>Coffee Warrior</title>
  <!-- Require the main Stitch file -->
  <link href='/css/style.css' rel='stylesheet' type='text/css'>
</head>
<body>
  <div class="container">
    <div id="display">
    	<div id="tower">
    	</div>
    	<div id="message">
    	</div>

    </div>
  
    <div id="control">
      <pre id="editor">class Player
  playTurn: (warrior) ->
    # do nothing
    </pre>
      <div id="buttons">
        <button id="hint" class="btn primary" type="button" style="display: none">Hint</button>
        <button id="run" class="btn primary" type="button">Run</button>
        <button id="stop" class="btn primary" type="button" style="display: none">Abort</button>
      </div>

      <div id="hint_message">
      </div>

      <div id="more_hint_message" style="display: none">
      </div>
      
    </div>
  </div>

  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js" type="text/javascript" charset="utf-8"></script>
  <script src="/js_warrior.js" type="text/javascript" charset="utf-8"></script>
  <script src="/js/modernizr.js" type="text/javascript" charset="utf-8"></script>
  <script src="/js/coffee-script.js" type="text/javascript" charset="utf-8"></script>

  <script src="/ace/src/ace.js" type="text/javascript" charset="utf-8"></script>
  <script src="/ace/src/theme-cobalt.js" type="text/javascript" charset="utf-8"></script>
  <script src="/ace/src/mode-coffee.js" type="text/javascript" charset="utf-8"></script>

<script type="text/javascript">
$(function(){
  JsWarrior     = require ("js_warrior").JsWarrior
  Mode          = require ("ace/mode/coffee").Mode

  var editor = ace.edit("editor")
  editor.setTheme("ace/theme/cobalt")
  editor.getSession().setMode(new Mode())
  editor.getSession().setTabSize(2);
  editor.getSession().setUseSoftTabs(true);

  var controller = new JsWarrior.Controller($, editor, CoffeeScript, Modernizr)
  controller.setup()
  controller.setGameLevel(<%= levelNumber %>, <%= epic %>)
});
</script>
